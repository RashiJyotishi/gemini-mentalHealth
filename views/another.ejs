<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>chat with your personalized doctor</title>
    <link rel="stylesheet" href="gem.css">
</head>
<body>
    <div class="chat-history">
      <% messageHistory.forEach(message => { %>
        <div class="message">
          <p style="font-size: 23px;"><%= message.sender %>: <%= message.message %></p>
        </div>
      <% }); %>
    </div>

    <div class="chat-form-container" >
      <form method="POST" action="/blogs" class="flex" id="chatForm">
        <input type="text" name="message" class="chat-input" id="chat-input" placeholder="Your message ..." id="chat-message-input">
        <button type="submit" action="/blogs" class="send" id="send">Submit</button>
      </form>
    </div>
    <button class="home-button" onclick="window.location.href='/'">Home</button>
    <script src="./gemini_streaming.js">
    </script>
</body>
</html>